{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", { "tsconfig": "tsconfig.json" }]
  },
  "moduleNameMapper": {
    "^configs/(.*)$": "<rootDir>/src/configs/$1",
    "^controller/(.*)$": "<rootDir>/src/controller/$1",
    "^routes/(.*)$": "<rootDir>/src/routes/$1"
  },
  "moduleDirectories": ["node_modules"]
}
